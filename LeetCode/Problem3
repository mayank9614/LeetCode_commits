###################################################################################################################
#Given a string s, find the length of the longest 
#substring
 #without repeating characters.

 

#Example 1:

#Input: s = "abcabcbb"
#Output: 3
#Explanation: The answer is "abc", with the length of 3.

###################################################################################################################

def length_of_longest_substring(s: str) -> int:
    # Initialize two pointers: 'left' and 'right' to 0. They represent the start and end of the current substring.
    left, right = 0, 0
    
    # Use a set 'chars' to store characters in the current substring. This helps in constant time lookup.
    chars = set()
    
    # 'max_len' will store the length of the longest substring without repeating characters.
    max_len = 0
    
    # Loop until the 'right' pointer reaches the end of the string.
    while right < len(s):
        # If the character at the 'right' pointer is not in the set, it means it's a new character for the current substring.
        if s[right] not in chars:
            # Add the new character to the set.
            chars.add(s[right])
            
            # Update 'max_len' if the current substring length (right - left + 1) is greater than the previous 'max_len'.
            max_len = max(max_len, right - left + 1)
            
            # Move the 'right' pointer to the next character.
            right += 1
        else:
            # If the character is already in the set, remove the character at the 'left' pointer from the set.
            chars.remove(s[left])
            
            # Move the 'left' pointer to the right to exclude the repeating character.
            left += 1
            
    # Return the length of the longest substring without repeating characters.
    return max_len

def main():
    # Ask the user for input
    s = input("Enter a string: ")
    
    # Call the function and print the result
    result = length_of_longest_substring(s)
    print(f"The length of the longest substring without repeating characters is: {result}")

# Call the main function
if __name__ == "__main__":
    main()
